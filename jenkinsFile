pipeline {
    agent {
        docker {
            image 'node:16'
        }
    }

    environment {
        SNYK_TOKEN = credentials('SNYK_TOKEN')  // Using API token from Jenkins global credentials store
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install --save'
            }
        }

        stage('Snyk Security Scan') {
            steps {
                script {
                    // Installing Snyk globally
                    sh 'npm install -g snyk'
                    
                    // Authenticating Snyk using the API token
                    sh 'snyk auth $SNYK_TOKEN'
                    
                    // Running Snyk test to scan for vulnerabilities
                    sh 'snyk test'
                }
            }
        }

    }

    post {
        failure {
            echo "Pipeline failed due to security vulnerabilities or other errors."
        }
    }
}
